<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 225">
  <defs>
    <linearGradient id="mlGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#11998e;stop-opacity:1" />
      <stop offset="25%" style="stop-color:#38ef7d;stop-opacity:1" />
      <stop offset="75%" style="stop-color:#0575e6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#11998e;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="mlBg" cx="50%" cy="50%" r="70%">
      <stop offset="0%" style="stop-color:rgba(17,153,142,0.1);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgba(0,0,0,0.2);stop-opacity:1" />
    </radialGradient>
    <filter id="mlGlow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  <rect width="400" height="225" fill="url(#mlGrad)"/>
  <rect width="400" height="225" fill="url(#mlBg)"/>
  
  <!-- Enhanced Neural Network -->
  <g transform="translate(200, 100)">
    <!-- Input layer -->
    <g fill="rgba(255,255,255,0.9)" stroke="rgba(56,239,125,0.8)" stroke-width="2">
      <circle cx="-80" cy="-30" r="8"/>
      <text x="-80" y="-26" font-family="Consolas, monospace" font-size="8" text-anchor="middle" fill="#11998e">x₁</text>
      <circle cx="-80" cy="0" r="8"/>
      <text x="-80" y="4" font-family="Consolas, monospace" font-size="8" text-anchor="middle" fill="#11998e">x₂</text>
      <circle cx="-80" cy="30" r="8"/>
      <text x="-80" y="34" font-family="Consolas, monospace" font-size="8" text-anchor="middle" fill="#11998e">x₃</text>
    </g>
    
    <!-- Hidden layer 1 -->
    <g fill="rgba(255,255,255,0.8)" stroke="rgba(5,117,230,0.8)" stroke-width="2">
      <circle cx="-20" cy="-20" r="7"/>
      <circle cx="-20" cy="0" r="7"/>
      <circle cx="-20" cy="20" r="7"/>
      <circle cx="-20" cy="40" r="7"/>
    </g>
    
    <!-- Hidden layer 2 -->
    <g fill="rgba(255,255,255,0.7)" stroke="rgba(56,239,125,0.6)" stroke-width="2">
      <circle cx="30" cy="-15" r="6"/>
      <circle cx="30" cy="5" r="6"/>
      <circle cx="30" cy="25" r="6"/>
    </g>
    
    <!-- Output layer -->
    <g fill="rgba(255,255,255,0.9)" stroke="rgba(17,153,142,0.9)" stroke-width="2">
      <circle cx="80" cy="0" r="8"/>
      <text x="80" y="4" font-family="Consolas, monospace" font-size="8" text-anchor="middle" fill="#0575e6">ŷ</text>
    </g>
    
    <!-- Neural connections with varying opacity based on weight -->
    <g stroke="rgba(255,255,255,0.4)" stroke-width="1">
      <!-- Input to hidden 1 -->
      <line x1="-72" y1="-30" x2="-27" y2="-20" opacity="0.8"/>
      <line x1="-72" y1="-30" x2="-27" y2="0" opacity="0.5"/>
      <line x1="-72" y1="0" x2="-27" y2="-20" opacity="0.6"/>
      <line x1="-72" y1="0" x2="-27" y2="0" opacity="0.9"/>
      <line x1="-72" y1="0" x2="-27" y2="20" opacity="0.7"/>
      <line x1="-72" y1="30" x2="-27" y2="20" opacity="0.8"/>
      <line x1="-72" y1="30" x2="-27" y2="40" opacity="0.6"/>
      
      <!-- Hidden 1 to hidden 2 -->
      <line x1="-13" y1="-20" x2="24" y2="-15" opacity="0.7"/>
      <line x1="-13" y1="0" x2="24" y2="5" opacity="0.8"/>
      <line x1="-13" y1="20" x2="24" y2="25" opacity="0.6"/>
      
      <!-- Hidden 2 to output -->
      <line x1="36" y1="-15" x2="72" y2="0" opacity="0.7"/>
      <line x1="36" y1="5" x2="72" y2="0" opacity="0.9"/>
      <line x1="36" y1="25" x2="72" y2="0" opacity="0.5"/>
    </g>
  </g>
  
  <!-- Algorithm types -->
  <g transform="translate(30, 40)" fill="rgba(255,255,255,0.8)">
    <text font-family="Arial, sans-serif" font-size="11" font-weight="bold">ML Algorithms:</text>
    <text y="16" font-family="Consolas, monospace" font-size="9">• Linear Regression</text>
    <text y="30" font-family="Consolas, monospace" font-size="9">• Random Forest</text>
    <text y="44" font-family="Consolas, monospace" font-size="9">• Neural Networks</text>
    <text y="58" font-family="Consolas, monospace" font-size="9">• SVM</text>
  </g>
  
  <!-- Data visualization chart -->
  <g transform="translate(320, 45)">
    <text x="0" y="0" fill="rgba(255,255,255,0.9)" font-family="Arial, sans-serif" font-size="10">Data Viz:</text>
    
    <!-- Simple scatter plot -->
    <rect x="0" y="5" width="60" height="40" fill="rgba(255,255,255,0.1)" stroke="rgba(255,255,255,0.6)" stroke-width="1"/>
    
    <!-- Data points -->
    <circle cx="10" cy="35" r="2" fill="#38ef7d"/>
    <circle cx="15" cy="30" r="2" fill="#38ef7d"/>
    <circle cx="25" cy="25" r="2" fill="#38ef7d"/>
    <circle cx="35" cy="20" r="2" fill="#0575e6"/>
    <circle cx="45" cy="15" r="2" fill="#0575e6"/>
    <circle cx="50" cy="10" r="2" fill="#0575e6"/>
    
    <!-- Trend line -->
    <line x1="8" y1="38" x2="52" y2="8" stroke="rgba(255,255,255,0.8)" stroke-width="1.5"/>
  </g>
  
  <!-- Mathematical formulas -->
  <g transform="translate(40, 160)" fill="rgba(255,255,255,0.7)">
    <text font-family="Consolas, monospace" font-size="10">y = mx + b</text>
    <text y="14" font-family="Consolas, monospace" font-size="10">σ(z) = 1/(1+e⁻ᶻ)</text>
    <text y="28" font-family="Consolas, monospace" font-size="10">∇f = ∂f/∂x</text>
  </g>
  
  <!-- AI Brain visualization -->
  <g transform="translate(300, 130)">
    <path d="M0,0 Q10,-10 20,-5 Q30,0 35,10 Q30,20 20,15 Q10,20 0,10 Q-5,5 0,0" 
          fill="rgba(56,239,125,0.3)" stroke="rgba(255,255,255,0.6)" stroke-width="1.5"/>
    
    <!-- Neural pathways inside brain -->
    <g stroke="rgba(255,255,255,0.4)" stroke-width="0.5" fill="rgba(255,255,255,0.8)">
      <circle cx="8" cy="5" r="1"/>
      <circle cx="15" cy="8" r="1"/>
      <circle cx="22" cy="6" r="1"/>
      <line x1="8" y1="5" x2="15" y2="8"/>
      <line x1="15" y1="8" x2="22" y2="6"/>
    </g>
    
    <text x="17" y="35" font-family="Arial, sans-serif" font-size="8" text-anchor="middle" fill="rgba(255,255,255,0.8)">AI</text>
  </g>
  
  <!-- Training process visualization -->
  <g transform="translate(250, 160)" fill="rgba(255,255,255,0.6)">
    <text font-family="Consolas, monospace" font-size="9">Training...</text>
    <rect x="0" y="8" width="40" height="6" fill="rgba(255,255,255,0.2)" stroke="rgba(255,255,255,0.5)" stroke-width="1"/>
    <rect x="0" y="8" width="28" height="6" fill="rgba(56,239,125,0.6)"/>
    <text x="45" y="13" font-family="Consolas, monospace" font-size="8">70%</text>
  </g>
  
  <!-- Main title -->
  <text x="200" y="195" font-family="Arial, sans-serif" font-size="26" fill="#ffffff" text-anchor="middle" font-weight="bold" filter="url(#mlGlow)">Machine Learning</text>
  <text x="200" y="213" font-family="Arial, sans-serif" font-size="13" fill="rgba(255,255,255,0.9)" text-anchor="middle">AI & Data Science</text>
  
  <!-- Decorative elements -->
  <circle cx="50" cy="50" r="4" fill="rgba(56,239,125,0.4)"/>
  <circle cx="360" cy="40" r="6" fill="rgba(255,255,255,0.3)"/>
  <circle cx="25" cy="200" r="3" fill="rgba(5,117,230,0.3)"/>
  
  <!-- Data flow arrows -->
  <g stroke="rgba(255,255,255,0.5)" stroke-width="1.5" fill="none" marker-end="url(#mlArrow)">
    <path d="M20 120 Q40 115 60 120"/>
  </g>
  
  <!-- Arrow marker -->
  <defs>
    <marker id="mlArrow" markerWidth="8" markerHeight="8" refX="4" refY="2" orient="auto" markerUnits="strokeWidth">
      <polygon points="0,0 0,4 6,2" fill="rgba(255,255,255,0.5)"/>
    </marker>
  </defs>
</svg>
